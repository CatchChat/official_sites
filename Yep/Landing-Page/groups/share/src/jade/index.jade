doctype html
html(lang="en")
    head
        title #{name} - #{desc}
        meta(charset='UTF-8')
        meta(name="keywords" content="#{keyw}")
        meta(name='description' content='#{desc}')
        meta(name="viewport" content="width=device-width height=device-height user-scalable=no initial-scale=1")
        link(rel='shortcut icon' href='/favicon.png' type='image/x-icon') 
        link(href='#{cdn}/slick.css' type='text/css' rel='stylesheet')
        link(href='/css/slick-theme.css' type='text/css' rel='stylesheet')
        link(href='/css/topic.css' type='text/css' rel='stylesheet')
    


    body
        .gallery.viewer
            .slick
        .media.viewer
        .container
            .topic
                .info
                    .avatar
                    .nickname
                    .time
                .text Loading...
                .images
            .chat
                .table
                    .cell.template
                        .avatar
                        .flex
                            .nickname
                            .bubble
                                .content
                        .avatar
        .footer
            .wrapper
                .appicon
                .appname Yep
                .appdesc Meet Genius
                .buttons
                    a.ios(href="#{iTunesLink}" target="_blank")
                    //- a.android(href="#{AndroidApk}" target="_blank")
                    a.android.soon




