- var name = "Yep"
- var desc = "A community where geniuses meet"
- var keyw = "Yep, App"

- var cdn  = "https://dn-catchinc.qbox.me"

- var iTunesLink = "https://appsto.re/us/40pP6.i"
- var AndroidApk = "#"

doctype html
html(lang="en" prefix="og: http://ogp.me/ns#")
  head
    title #{name} - #{desc}
    meta(charset='UTF-8')
    meta(name="keywords" content="#{keyw}")
    meta(name='description' content='#{desc}')
    meta(name="viewport" content="width=device-width height=device-height user-scalable=no initial-scale=1")
    link(rel='shortcut icon' href='/favicon.png' type='image/x-icon')
    link(href='/css/style.css' type='text/css' rel='stylesheet')

    //- Twitter
    meta(name="twitter:card" content="app")
    meta(name="twitter:description" content="Meet genius around you from Dribbble Github and Instagram!")
    meta(name="twitter:app:country" content="US")
    meta(name="twitter:site" content="@soyepapp")
    meta(name="twitter:app:name:iphone" content="Yep")
    meta(name="twitter:app:name:id" content="983891256")
    meta(name="twitter:text:title" content="Yep - Meet Genius")
    meta(name="twitter:image" content="http://static-catch.qiniudn.com/icon-iphone.png")
    //- meta(name="twitter:app:name:url" content="yep://")

    //- OpenGraph
    meta(name="og:title" content="Yep")
    meta(name="og:type" content="article")
    meta(name="og:url" content="https://soyep.com")
    meta(name="og:site_name" content="Yep")
    meta(name="og:image" content="http://static-catch.qiniudn.com/icon-iphone.png")
    meta(name="og:description" content="Meet genius around you from Dribbble Github and Instagram!")

  body
    .wrapper
      .header
        .hero
          .intro
            .icon
            .name #{name}
            br
            .desc #{desc}
          //- .download
            //- a(href="#{iTunesLink}").ios
            //- a(href="#{AndroidApk}").android
            //- a.android.soon
          
          .morespace
            .icon
            .name MoreSpace
            br
            .desc The next step Yep
            .button COMING SOON 2017
            

        .device
          .iphone
            #screen.swipe
              .swipe-wrap
                .img(style="background-image: url(#{cdn}/yep_discussion.jpg);")
                .img(style="background-image: url(#{cdn}/yep_profile.jpg);")
                .img(style="background-image: url(#{cdn}/yep_feeds2.jpg);")
                .img(style="background-image: url(#{cdn}/yep_discover.jpg);")
                .img(style="background-image: url(#{cdn}/yep_feeds1.jpg);")





        
      
      .main
        .features
          ul
            li
              .feature
                img(src="#{cdn}/yep_genius.svg")
                h1 Discover
                h2
                  | Find genius around you
                  br
                  | and chat up
                  
            li
              .feature
                img(src="#{cdn}/yep_match.svg")
                h1 Match
                h2
                  | Meet different people and
                  br
                  | content depends on your choice
            li
              .feature
                img(src="#{cdn}/yep_build.svg")
                h1 Meet
                h2
                  | Find meetup and get
                  br
                  | inspired
        
        .dots
          .dot.active
          .dot
          .dot
          
        .top
  
  
  
  
      .footer
        .ghbtns
          iframe(src="https://ghbtns.com/github-btn.html?user=catchchat&repo=yep&type=watch&count=true&v=2", frameborder="0", scrolling="0")
          iframe(src="https://ghbtns.com/github-btn.html?user=catchchat&repo=yep&type=star&count=true&v=2", frameborder="0", scrolling="0")
          iframe(src="https://ghbtns.com/github-btn.html?user=catchchat&repo=yep&type=fork&count=true&v=2", frameborder="0", scrolling="0")
        .links
          a(href="/about") About Yep
          a(href="/blog") Blog
          a(href="/press") Press
          a(href="/privacy") Term of Services
        .copyright Copyright &copy; 2015-2016 Catch Inc. All Rights Reserved
    
  



