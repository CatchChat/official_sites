doctype html
html(lang="en" prefix="og: http://ogp.me/ns#")
  head
    title #{name} - #{desc}
    meta(charset='UTF-8')
    meta(name="keywords" content="#{keyw}")
    meta(name='description' content='#{desc}')
    meta(name="viewport" content="width=device-width height=device-height user-scalable=no initial-scale=1")
    link(rel='shortcut icon' href='/favicon.png' type='image/x-icon')
    link(href='/css/style.css' type='text/css' rel='stylesheet')

    //- Twitter
    meta(name="twitter:card" content="app")
    meta(name="twitter:description" content="Meet genius around you from Dribbble Github and Instagram!")
    meta(name="twitter:app:country" content="US")
    meta(name="twitter:site" content="@soyepapp")
    meta(name="twitter:app:name:iphone" content="Yep")
    meta(name="twitter:app:name:id" content="983891256")
    meta(name="twitter:text:title" content="Yep - Meet Genius")
    meta(name="twitter:image" content="http://static-catch.qiniudn.com/icon-iphone.png")
    //- meta(name="twitter:app:name:url" content="yep://")

    //- OpenGraph
    meta(name="og:title" content="Yep")
    meta(name="og:type" content="article")
    meta(name="og:url" content="https://soyep.com")
    meta(name="og:site_name" content="Yep")
    meta(name="og:image" content="http://static-catch.qiniudn.com/icon-iphone.png")
    meta(name="og:description" content="Meet genius around you from Dribbble Github and Instagram!")

  body
    .wrapper
      .header
        .hero
          .intro
            .icon
            .name
            .desc
          .download
            a(href="#{iTunesLink}", target="_blank").ios
            a(href="#{AndroidApk}", target="_blank").android.soon
        .device
          .screen
          
        
      
      .main
        .container.swipe#slider
          ul.swipe-wrap
            li
              img(src="#{cdn}/yep_genius.svg")
              h1 lorem ipsum
              h2 lorem ipsum lorem ipsum lorem ipsum
            li
              img(src="#{cdn}/yep_match.svg")
              h1 lorem ipsum
              h2 lorem ipsum lorem ipsum lorem ipsum
            li
              img(src="#{cdn}/yep_build.svg")
              h1 lorem ipsum
              h2 lorem ipsum lorem ipsum lorem ipsum
  
  
      
      .footer
        .top
        .links
        .copyright
    
  



